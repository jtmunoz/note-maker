<div class="uk-padding-small uk-card uk-card-hover uk-border-rounded" style="border: 1px solid black;">
	<% if @errors %>
	<ul>
	<% @errors.each do |error| %>
		<li class="uk-text-danger"><%= error %></li>
	<% end %>
	</ul>
	<% end %>

	<h2>Add A New Note</h2>
	<form method="post" action="/notes">
		<label for="title">Title: </label>
		<input class="uk-input" type="text" placeholder="Note Title" name="note[title]">
		<label for="body">Body: </label>
		<input class="uk-input" type="text" placeholder="Note Body" name="note[body]">
		<input class="uk-button uk-button-primary uk-margin-top uk-button-small uk-width-1-1@s" type ="submit" value="Add Note">
	</form>					
</div>