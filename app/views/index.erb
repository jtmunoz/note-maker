<div uk-grid="">
	<div class="uk-width-3-5@m">
		<div class="uk-padding-small uk-card uk-card-hover uk-border-rounded" style="border: 1px solid black;">
			<h2>All Notes</h2>
			<ul class="uk-list uk-list-divider">
				<% @notes.each do |note| %>
				<li>
					<a href="/note/<%= note.id %>"><%= note.title %></a> | <%= note.pretty_time %>
				</li>
				<% end %>
			</ul>			
		</div>
	</div>
	<div class="uk-width-2-5@m">
		<div class="uk-padding-small uk-card uk-card-hover uk-border-rounded" style="border: 1px solid black;">
			<h2>Add A New Note</h2>
			<form method="post" action="/note">
				<label for="title">Title: </label>
				<input class="uk-input" type="text" placeholder="Note Title" name="params[title]">
				<label for="body">Body: </label>
				<input class="uk-input" type="text" placeholder="Note Body" name="params[body]">
				<input class="uk-button uk-button-primary uk-margin-top uk-button-small uk-width-1-1@s" type ="submit" value="Add Note">
			</form>					
		</div>
	</div>
</div>